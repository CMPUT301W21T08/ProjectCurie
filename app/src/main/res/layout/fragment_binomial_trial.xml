<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="215dp"
    tools:layout_editor_absoluteY="122dp">

    <Switch
        android:id="@+id/binomial_switch"
        android:layout_width="72dp"
        android:layout_height="63dp"
        android:maxHeight="10dp"
        android:switchMinWidth="56dp"
        android:theme="@style/SwitchThemeOverlay"
        android:thumbTint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:text="PASS"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/search_keyword_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/search_keyword_editText"
        android:layout_width="233dp"
        android:layout_height="47dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#4CAF50"
        android:ems="10"
        android:hint="Enter barcode"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/generate_qr_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/add_barcode_button"
        android:layout_width="111dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:text="Add Barcode"
        android:textAllCaps="false"
        android:textColor="#03A9F4"
        app:layout_constraintBottom_toTopOf="@+id/generate_qr_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toEndOf="@+id/search_keyword_editText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922" />

    <Button
        android:id="@+id/generate_qr_button"
        android:layout_width="353dp"
        android:layout_height="53dp"
        android:background="#03A9F4"
        android:text="Generate QR"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="494dp" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="353dp"
        android:layout_height="52dp"
        android:background="#03A9F4"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generate_qr_button"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/binomial_title"
        android:layout_width="397dp"
        android:layout_height="68dp"
        android:text="Enter Pass or Fail"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/binomial_switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>